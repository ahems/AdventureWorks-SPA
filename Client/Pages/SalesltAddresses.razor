@page "/saleslt-addresses"

<PageTitle>SalesltAddresses</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="SalesltAddresses" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@(salesltAddresses)" LoadData="@Grid0LoadData" Count="@count" TItem="AdventureWorks.Server.Models.adventureworks.SalesltAddress" RowSelect="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltAddress" Property="AddressId" Title="Address Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltAddress" Property="AddressLine1" Title="Address Line1">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltAddress" Property="AddressLine2" Title="Address Line2">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltAddress" Property="City" Title="City">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltAddress" Property="StateProvince" Title="State Province">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltAddress" Property="CountryRegion" Title="Country Region">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltAddress" Property="PostalCode" Title="Postal Code">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltAddress" Property="Rowguid" Title="Rowguid">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltAddress" Property="ModifiedDate" Title="Modified Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltAddress" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="salesltAddress">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, salesltAddress)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
