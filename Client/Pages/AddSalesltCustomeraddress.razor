@page "/add-saleslt-customeraddress"

<PageTitle>Add SalesltCustomeraddress</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save SalesltCustomeraddress</RadzenAlert>
        <RadzenTemplateForm TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomeraddress" Data="@(salesltCustomeraddress)" Visible="@(salesltCustomeraddress != null)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Customer" Component="Customer" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@(salesltCustomersForCustomerId)" TextProperty="Title" ValueProperty="CustomerId" AllowClear=true
                         Placeholder="Choose Customer" style="display: block; width: 100%" @bind-Value="@(salesltCustomeraddress.CustomerId)" Name="CustomerId"
                         Count=@salesltCustomersForCustomerIdCount LoadData=@salesltCustomersForCustomerIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Address" Component="Address" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@(salesltAddressesForAddressId)" TextProperty="AddressLine1" ValueProperty="AddressId" AllowClear=true
                         Placeholder="Choose Address" style="display: block; width: 100%" @bind-Value="@(salesltCustomeraddress.AddressId)" Name="AddressId"
                         Count=@salesltAddressesForAddressIdCount LoadData=@salesltAddressesForAddressIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Address Type" Component="AddressType" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(salesltCustomeraddress.AddressType)" Name="AddressType" />
                    <RadzenRequiredValidator Component="AddressType" Text="AddressType is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Modified Date" Component="ModifiedDate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@(salesltCustomeraddress.ModifiedDate)" Name="ModifiedDate" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

