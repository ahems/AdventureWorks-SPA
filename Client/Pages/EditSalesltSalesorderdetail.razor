@page "/edit-saleslt-salesorderdetail"

<PageTitle>Edit SalesltSalesorderdetail</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save SalesltSalesorderdetail</RadzenAlert>
        <RadzenTemplateForm TItem="AdventureWorks.Server.Models.adventureworks.SalesltSalesorderdetail" Data="@(salesltSalesorderdetail)" Visible="@(salesltSalesorderdetail != null)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Sales Order Header" Component="SalesOrderHeader" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@(salesltSalesOrderHeadersForSalesOrderId)" TextProperty="SalesOrderNumber" ValueProperty="SalesOrderId" AllowClear=true
                         Placeholder="Choose SalesOrderHeader" style="display: block; width: 100%" @bind-Value="@(salesltSalesorderdetail.SalesOrderId)" Name="SalesOrderId"
                         Count=@salesltSalesOrderHeadersForSalesOrderIdCount LoadData=@salesltSalesOrderHeadersForSalesOrderIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Order Qty" Component="OrderQty" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(salesltSalesorderdetail.OrderQty)" Name="OrderQty" />
                    <RadzenRequiredValidator Component="OrderQty" Text="OrderQty is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Product" Component="Product" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@(salesltProductsForProductId)" TextProperty="Name" ValueProperty="ProductId" AllowClear=true
                         Placeholder="Choose Product" style="display: block; width: 100%" @bind-Value="@(salesltSalesorderdetail.ProductId)" Name="ProductId"
                         Count=@salesltProductsForProductIdCount LoadData=@salesltProductsForProductIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Unit Price" Component="UnitPrice" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(salesltSalesorderdetail.UnitPrice)" Name="UnitPrice" />
                    <RadzenRequiredValidator Component="UnitPrice" Text="UnitPrice is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Unit Price Discount" Component="UnitPriceDiscount" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(salesltSalesorderdetail.UnitPriceDiscount)" Name="UnitPriceDiscount" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Modified Date" Component="ModifiedDate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@(salesltSalesorderdetail.ModifiedDate)" Name="ModifiedDate" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

