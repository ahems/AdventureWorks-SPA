@page "/saleslt-products"

<PageTitle>SalesltProducts</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="SalesltProducts" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@(salesltProducts)" LoadData="@Grid0LoadData" Count="@count" TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" RowSelect="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Property="ProductId" Title="Product Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Property="Name" Title="Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Property="ProductNumber" Title="Product Number">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Property="Color" Title="Color">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Property="StandardCost" Title="Standard Cost">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Property="ListPrice" Title="List Price">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Property="Size" Title="Size">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Property="Weight" Title="Weight">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Property="ProductCategory.Name" Title="Product Category">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Property="ProductModel.Name" Title="Product Model">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Property="SellStartDate" Title="Sell Start Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Property="SellEndDate" Title="Sell End Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Property="DiscontinuedDate" Title="Discontinued Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Property="ThumbnailPhotoFileName" Title="Thumbnail Photo File Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Property="Rowguid" Title="Rowguid">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Property="ModifiedDate" Title="Modified Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltProduct" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="salesltProduct">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, salesltProduct)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
