@page "/saleslt-customers"

<PageTitle>SalesltCustomers</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="SalesltCustomers" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@(salesltCustomers)" LoadData="@Grid0LoadData" Count="@count" TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" RowSelect="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" Property="CustomerId" Title="Customer Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" Property="NameStyle" Title="Name Style">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" Property="Title" Title="Title">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" Property="FirstName" Title="First Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" Property="MiddleName" Title="Middle Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" Property="LastName" Title="Last Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" Property="Suffix" Title="Suffix">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" Property="CompanyName" Title="Company Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" Property="SalesPerson" Title="Sales Person">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" Property="EmailAddress" Title="Email Address">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" Property="Phone" Title="Phone">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" Property="PasswordHash" Title="Password Hash">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" Property="PasswordSalt" Title="Password Salt">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" Property="Rowguid" Title="Rowguid">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" Property="ModifiedDate" Title="Modified Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="AdventureWorks.Server.Models.adventureworks.SalesltCustomer" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="salesltCustomer">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, salesltCustomer)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
