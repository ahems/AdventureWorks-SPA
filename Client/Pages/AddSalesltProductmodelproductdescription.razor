@page "/add-saleslt-productmodelproductdescription"

<PageTitle>Add SalesltProductmodelproductdescription</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save SalesltProductmodelproductdescription</RadzenAlert>
        <RadzenTemplateForm TItem="AdventureWorks.Server.Models.adventureworks.SalesltProductmodelproductdescription" Data="@(salesltProductmodelproductdescription)" Visible="@(salesltProductmodelproductdescription != null)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Product Model" Component="ProductModel" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@(salesltProductModelsForProductModelId)" TextProperty="Name" ValueProperty="ProductModelId" AllowClear=true
                         Placeholder="Choose ProductModel" style="display: block; width: 100%" @bind-Value="@(salesltProductmodelproductdescription.ProductModelId)" Name="ProductModelId"
                         Count=@salesltProductModelsForProductModelIdCount LoadData=@salesltProductModelsForProductModelIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Product Description" Component="ProductDescription" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@(salesltProductDescriptionsForProductDescriptionId)" TextProperty="Description" ValueProperty="ProductDescriptionId" AllowClear=true
                         Placeholder="Choose ProductDescription" style="display: block; width: 100%" @bind-Value="@(salesltProductmodelproductdescription.ProductDescriptionId)" Name="ProductDescriptionId"
                         Count=@salesltProductDescriptionsForProductDescriptionIdCount LoadData=@salesltProductDescriptionsForProductDescriptionIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Culture" Component="Culture" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(salesltProductmodelproductdescription.Culture)" Name="Culture" />
                    <RadzenRequiredValidator Component="Culture" Text="Culture is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Modified Date" Component="ModifiedDate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@(salesltProductmodelproductdescription.ModifiedDate)" Name="ModifiedDate" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

